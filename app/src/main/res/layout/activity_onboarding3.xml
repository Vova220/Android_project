<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding3"
    android:background="@drawable/onboarding_3">

    <Button
        android:id="@+id/button3"
        android:layout_width="359dp"
        android:layout_height="62dp"
        android:background="@drawable/custom_button"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Choose a language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:elevation="4dp"
        android:fontFamily="@font/fredoka_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6sp"
        android:text="The lessons you need to learn"
        android:textColor="#080E1E"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="331dp"
        android:layout_height="43dp"
        android:alpha="0.89"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5sp"
        android:text="Using a variety of learning styles to learn and retain"
        android:textColor="#66080E1E"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <TextView
        android:id="@+id/skipOnboardingText3"
        android:layout_width="169dp"
        android:layout_height="33dp"

        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fredoka_one"
        android:letterSpacing="0.03"
        android:onClick="skipOnboarding"
        android:text="Skip onboarding"
        android:textAlignment="center"
        android:textColor="#080E1E"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />
</androidx.constraintlayout.widget.ConstraintLayout>